<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="sweet_temptation_clienteEscritorio.resources.styleSheets.styleSheetClient">
    
    
    
    <!--Agregar funcionalidad a botones-->
    <Style x:Key="MenuItemStyle" TargetType="ListBoxItem">
        <Setter Property="Padding" Value="10"/>

        <EventSetter Event="PreviewMouseLeftButtonUp" Handler="Menu_Click"/>
    </Style>
    
    
    <!--BtnMenuStyle Client-->

    <Style x:Key="BtnMenuStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <TextBlock Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextDecorations="{TemplateBinding Tag}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FF70B5"/>
                            <Setter Property="Tag" Value="Underline"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Btn Carrito de compra rosa-->

    <Style x:Key="BtnCarritoDeCompra" TargetType="Button">
        <Setter Property="Width" Value="70"/>
        <Setter Property="Height" Value="54"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="8,4"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            CornerRadius="10"
                            SnapsToDevicePixels="True"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop x:Name="gs1" Color="#FF70B5" Offset="0"/>
                                <GradientStop x:Name="gs2" Color="#6C3E54" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>

                        <!-- Aquí usamos TemplateBinding para que herede el color del botón -->
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"
                                          TextElement.Foreground="{TemplateBinding Foreground}"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!-- Hover: animación de degradado y cambio de texto -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="gs1"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#FF34AE"
                                                        Duration="0:0:0.25"/>
                                        <ColorAnimation Storyboard.TargetName="gs2"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#FFFFFF"
                                                        Duration="0:0:0.25"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="gs1"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#FF70B5"
                                                        Duration="0:0:0.25"/>
                                        <ColorAnimation Storyboard.TargetName="gs2"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#6C3E54"
                                                        Duration="0:0:0.25"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Efecto de "presionado" -->
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.95" Duration="0:0:0.07"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.95" Duration="0:0:0.07"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" Duration="0:0:0.07"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" Duration="0:0:0.07"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Btn desplegable cuenta usuario-->

    <Style x:Key="BtnMenuCuentaStyle" TargetType="Button">
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="Root" Background="Transparent">
                        <TextBlock x:Name="Label"
                           Text="{TemplateBinding Content}"
                           Foreground="{TemplateBinding Foreground}"
                           FontWeight="Regular"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                        <Popup x:Name="popupCuenta"
                           Placement="Bottom"
                           PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           PopupAnimation="Fade"
                           StaysOpen="True">
                            <Border Background="#FFFFFF"
                              BorderBrush="#FF70B5"
                              BorderThickness="2"
                              CornerRadius="8"
                              SnapsToDevicePixels="True"
                              Margin="0,6,0,0">
                                <ListBox Width="170"
                                 Background="#FFFFFF"
                                 BorderThickness="0"
                                 Padding="4"
                                 IsTabStop="False">
                                    <ListBox.Resources>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background" Value="#FFFFFF"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                            <Setter Property="Padding" Value="10,6"/>
                                            <EventSetter Event="PreviewMouseLeftButtonUp" Handler="Menu_Click"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border x:Name="optionBorder"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="4">
                                                            <TextBlock Text="{TemplateBinding Content}"
                                                                 Foreground="{TemplateBinding Foreground}"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="optionBorder" Property="Background" Value="#FF70B5"/>
                                                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.Resources>
                                    <ListBoxItem Content="Mis pedidos" Tag="Pedidos" Style="{StaticResource MenuItemStyle}"/>
                                    <ListBoxItem Content="Mi cuenta" Tag="Cuenta" Style="{StaticResource MenuItemStyle}"/>
                                    <ListBoxItem Content="Cerrar sesión" Tag="Logout" Style="{StaticResource MenuItemStyle}"/>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter" SourceName="Root">
                            <BeginStoryboard>
                                <Storyboard>
                                    <BooleanAnimationUsingKeyFrames Storyboard.TargetName="popupCuenta"
                                                  Storyboard.TargetProperty="IsOpen">
                                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                    </BooleanAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="MouseLeave" SourceName="Root">
                            <BeginStoryboard>
                                <Storyboard>
                                    <BooleanAnimationUsingKeyFrames Storyboard.TargetName="popupCuenta"
                                                  Storyboard.TargetProperty="IsOpen">
                                        <DiscreteBooleanKeyFrame KeyTime="0:0:0.15" Value="False"/>
                                    </BooleanAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="MouseEnter" SourceName="popupCuenta">
                            <BeginStoryboard>
                                <Storyboard>
                                    <BooleanAnimationUsingKeyFrames Storyboard.TargetName="popupCuenta"
                                                  Storyboard.TargetProperty="IsOpen">
                                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                    </BooleanAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="MouseLeave" SourceName="popupCuenta">
                            <BeginStoryboard>
                                <Storyboard>
                                    <BooleanAnimationUsingKeyFrames Storyboard.TargetName="popupCuenta"
                                                  Storyboard.TargetProperty="IsOpen">
                                        <DiscreteBooleanKeyFrame KeyTime="0:0:0.15" Value="False"/>
                                    </BooleanAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Label" Property="Foreground" Value="#FF70B5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Btn rosa-->

    <Style x:Key="BtnRosaStyle" TargetType="Button">
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="54"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
        <Setter Property="Background" Value="#FF70B5"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                  Background="{TemplateBinding Background}"
                  CornerRadius="30"
                  SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF3D9B"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF2C7C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Boton blanco-->
    
    <Style x:Key="BtnBlancoStyle" TargetType="Button">
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="54"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#FF70B5"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="30"
                    SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF3D9B"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF2C7C"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Botón regresar-->
    <Style x:Key="BtnRegresar" TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#FF70B5"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="#FF70B5"/>
        <Setter Property="Padding" Value="5"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="ButtonBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10" >
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#FF70B5"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#CCFF70B5"/>
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#CCFF70B5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Botón tipo pago-->
    <Style x:Key="BtnTipoPago" TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#FF70B5"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="#FF70B5"/>
        <Setter Property="Padding" Value="5"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="ButtonBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="40" >
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#FF70B5"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#CCFF70B5"/>
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#CCFF70B5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Título -->
    <Style x:Key="TxtTitulo" TargetType="TextBlock">
        <Setter Property="FontSize" Value="45"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#prata"/>
    </Style>

    <!-- Etiquetas -->
    <Style x:Key="TxtEtiqueta" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Foreground" Value="#282828"/>
    </Style>

    <!-- Campos de texto -->
    <Style x:Key="TxtCampo" TargetType="TextBox">
        <Setter Property="Height" Value="70"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#FF70B5"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border 
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="20"
                    SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                  Margin="0" 
                                  Focusable="False"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Fondo degradado de tarjeta -->
    <LinearGradientBrush x:Key="GradientTarjeta" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF7B2FF7" Offset="0.0"/>
        <GradientStop Color="#FFDF1B8D" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Sombra -->
    <DropShadowEffect x:Key="SombraSuave"
                  Color="Gray" BlurRadius="15" ShadowDepth="3"/>

    <!-- Etiquetas tipo Label-->
    <Style x:Key="lbTexto" TargetType="Label">
        <Setter Property="Foreground" Value="#282828"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#prata"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <!-- ComboBox -->
    <Style x:Key="cbEstandar" TargetType="ComboBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#FF70B5"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="#FF70B5"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#prata"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <!-- IMPORTANTE: este template es para ComboBox NO editable -->
        <Setter Property="IsEditable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">

                    <!-- Estilo de los ítems del dropdown -->
                    <ControlTemplate.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="#FF70B5"/>
                            <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#prata"/>
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="Background" Value="White"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE05FA5"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ControlTemplate.Resources>

                    <Grid>
                        <!-- Cuerpo del ComboBox -->
                        <Border x:Name="ComboBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="40">
                            <Grid Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Placeholder: usa Tag del ComboBox -->
                                <TextBlock x:Name="PlaceholderText"
                                       Grid.Column="0"
                                       Margin="{TemplateBinding Padding}"
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                       Foreground="#FFB0B0B0"
                                       Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                       Visibility="Collapsed"/>

                                <!-- Texto / contenido seleccionado -->
                                <ContentPresenter x:Name="ContentPresenter"
                                              Grid.Column="0"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>

                                <!-- Botón de desplegar -->
                                <ToggleButton x:Name="DropDownToggle"
                                          Grid.Column="1"
                                          Focusable="False"
                                          ClickMode="Press"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Padding="8,0,12,0"
                                          IsChecked="{Binding IsDropDownOpen,
                                                             RelativeSource={RelativeSource TemplatedParent},
                                                             Mode=TwoWay}">
                                    <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                      Stretch="Uniform"
                                      Width="10"
                                      Height="6"
                                      Fill="{TemplateBinding Foreground}"/>
                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!-- Popup con los ítems -->
                        <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                            <Grid>
                                <Border Background="White"
                                    BorderBrush="#FF70B5"
                                    BorderThickness="2"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True"
                                    Width="{TemplateBinding ActualWidth}">
                                    <ScrollViewer Margin="2"
                                              SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Mostrar placeholder cuando NO hay selección -->
                        <Trigger Property="SelectedIndex" Value="-1">
                            <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ContentPresenter" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- Hover del combo -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ComboBorder" Property="Background" Value="#FF70B5"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>

                        <!-- Cuando el desplegable está abierto -->
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="ComboBorder" Property="Background" Value="#CCFF70B5"/>
                            <Setter TargetName="ComboBorder" Property="BorderBrush" Value="#CCFF70B5"/>
                        </Trigger>

                        <!-- Deshabilitado -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ComboBorder" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Estilo de las filas -->
    <Style x:Key="dgRowEstandar" TargetType="DataGridRow">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#FF70B5"/>
        <Setter Property="BorderBrush" Value="#FF70B5"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#prata"/>
        <Setter Property="FontSize" Value="22"/>

        <Style.Triggers>
            <!-- Hover: cuando el mouse está sobre cualquier parte de la fila -->
            <Trigger Property="IsMouseOver" Value="True">
                <!-- Tono ligeramente más oscuro que el rosa base -->
                <Setter Property="Background" Value="#FFE05FA5"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>

            <!-- Seleccionado -->
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#FF70B5"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>

            <!-- Deshabilitado -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo de las celdas (para que la fila controle el fondo) -->
    <Style x:Key="dgCellEstandar" TargetType="DataGridCell">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="Foreground" Value="#FF70B5"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
        <Setter Property="FontSize" Value="20"/>

        <Style.Triggers>
            <!-- Que la selección de celda respete el estilo de la fila -->
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo de encabezados de columna -->
    <Style x:Key="dgHeaderEstandar" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#FF70B5"/>
        <Setter Property="BorderBrush" Value="#FF70B5"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#prata"/>
        <Setter Property="FontSize" Value="19"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="6,4"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF70B5"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo general del DataGrid -->
    <Style x:Key="dgEstandar" TargetType="DataGrid">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#FF70B5"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="#FF70B5"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="#FFFDF4FB" />
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#FFECCFEF"/>
        <Setter Property="VerticalGridLinesBrush" Value="#FFECCFEF"/>
        <Setter Property="HeadersVisibility" Value="All"/>
        <Setter Property="RowStyle" Value="{StaticResource dgRowEstandar}"/>
        <Setter Property="CellStyle" Value="{StaticResource dgCellEstandar}"/>
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource dgHeaderEstandar}"/>
    </Style>


    <!-- Item Pedido ListBox -->
    <Style x:Key="PedidoItemStyle" TargetType="ListBoxItem">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">

                    <Border BorderBrush="#FF70B5"
                        BorderThickness="2"
                        CornerRadius="20"
                        Padding="10"
                        Margin="50,0,50,40"
                        MinHeight="90">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding id}"
                                   FontSize="18"
                                   VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1"
                                   Text="{Binding fechaCompra}"
                                   FontSize="18"
                                   VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="2"
                                   Text="{Binding total}"
                                   FontSize="18"
                                   VerticalAlignment="Center"/>

                            <Button Grid.Column="3"
                                Content="Ver"
                                Margin="10,15,15,20"
                                Padding="10,4"
                                FontSize="16"
                                Cursor="Hand"/>
                        </Grid>

                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

