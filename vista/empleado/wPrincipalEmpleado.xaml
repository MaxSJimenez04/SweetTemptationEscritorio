<Page x:Class="sweet_temptation_clienteEscritorio.vista.empleado.wPrincipalEmpleado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="Panel de Empleado">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="BtnMenuEmpleado" TargetType="Button">
                <Setter Property="Width" Value="260"/>
                <Setter Property="Height" Value="55"/>
                <Setter Property="Margin" Value="0,12"/>
                <Setter Property="FontSize" Value="17"/>
                <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}"
                                    Effect="{StaticResource SombraSuave}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#FFF7F7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lado Izquierdo - Bienvenida y Foto -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="60,0,40,0">
            <TextBlock Text="Â¡Bienvenido," 
                       FontFamily="pack://application:,,,/resources/fonts/#prata"
                       FontSize="48" 
                       Foreground="#FF70B5"/>
            <TextBlock x:Name="txtNombreUsuario"
                       Text="Usuario Empleado!"
                       FontFamily="pack://application:,,,/resources/fonts/#prata"
                       FontSize="40" 
                       Foreground="#333333"
                       Margin="0,0,0,40"/>
            
            <!-- Foto del empleado / Imagen decorativa -->
            <Border Background="White" 
                    CornerRadius="20" 
                    Width="300" Height="280"
                    Effect="{StaticResource SombraSuave}"
                    HorizontalAlignment="Left">
                <Grid>
                    <Image Source="/resources/images/logo_sweettemptation.png" 
                           Width="180" 
                           Stretch="Uniform"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                    <TextBlock Text="Empleado"
                               FontFamily="pack://application:,,,/resources/fonts/#poppins"
                               FontSize="16"
                               Foreground="#FF70B5"
                               FontWeight="SemiBold"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Lado Derecho - Botones de NavegaciÃ³n -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <Button x:Name="btnGestionarProductos" 
                    Content="ðŸ§  Gestionar Productos"
                    Style="{StaticResource BtnMenuEmpleado}"
                    Background="#9B59B6"
                    Click="BtnGestionarProductos_Click"/>
            
            <Button x:Name="btnGestionarPedidos" 
                    Content="ðŸ“¦  Gestionar Pedidos"
                    Style="{StaticResource BtnMenuEmpleado}"
                    Background="#FF70B5"
                    Click="BtnGestionarPedidos_Click"/>
            
            <Button x:Name="btnProductos" 
                    Content="ðŸ“‹  Ver Productos"
                    Style="{StaticResource BtnMenuEmpleado}"
                    Background="#E91E63"
                    Click="BtnProductos_Click"/>
            
            <Button x:Name="btnPedidosRecientes" 
                    Content="ðŸ•  Pedidos Recientes"
                    Style="{StaticResource BtnMenuEmpleado}"
                    Background="#C2185B"
                    Click="BtnPedidosRecientes_Click"/>
            
        </StackPanel>
    </Grid>
</Page>







