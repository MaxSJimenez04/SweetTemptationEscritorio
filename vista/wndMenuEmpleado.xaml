<Window x:Class="sweet_temptation_clienteEscritorio.vista.wndMenuEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Title="wndMenuEmpleado"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    
    <Grid Background="#FFF7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="87"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border 
      Grid.Row="0"
      BorderThickness="0,0,0,3" BorderBrush="#FF70B5">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="540"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Button          
                     Grid.Column="0"
                     x:Name="Home"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Height="56"
                     Width="221"
                     Background="Transparent"
                     BorderBrush="Transparent">
                        <Image Source="/resources/images/logo_sweettemptation2.png" Stretch="UniformToFill"/>
                </Button>

                <Button x:Name="BtnInventario" 
                     Grid.Column="2"
                     Content="Inventario"
                     Margin="2"
                     Style="{StaticResource BtnMenuStyle}" 
                     Click="BtnInventarioClick"/>

                <Button x:Name="BtnHistorial"
                     Grid.Column="3"
                     Content="Historial"
                     Margin="8"
                     Style="{StaticResource BtnMenuStyle}" 
                     Click="BtnHistorialClick"/>

                <Button x:Name="BtnPedidos"
                     Grid.Column="4"
                     Content="Pedidos"
                     Margin="8"
                     Style="{StaticResource BtnMenuStyle}" 
                     Click="BtnPedidosClick"/>

                <Button x:Name="BtnCuenta"
                     Grid.Column="5"
                     Margin="8"
                     Content="Mi Cuenta"
                     Style="{StaticResource BtnMenuCuentaStyle}"/>
            </Grid>
        </Border>
        <Frame Grid.Row="1" Name="fmPrincipal" NavigationUIVisibility="Hidden" Navigated="fmPrincipal_Navigated" />
    </Grid>
</Window>
