<Page x:Class="sweet_temptation_clienteEscritorio.vista.pedidoPersonalizado.wSolicitudesPersonalizadas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.pedidoPersonalizado"
      mc:Ignorable="d" 
      Title="wSolicitudesPersonalizadas"
      Background="White"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        

    </Page.Resources>

    <Viewbox
    Stretch="Uniform">
        <Grid Background="#FFFFFF" 
              Height="993" 
              Width="1920">
            <StackPanel 
                Orientation="Horizontal" 
                VerticalAlignment="Top" 
                Margin="0,0,0,20">
                <Button 
                    Grid.Column="0"
                    Style="{StaticResource BtnRegresar}"
                    Width="70"
                    Height="40"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="10,40,0,0" 
                    Click="btnClickRegresar">
                    <svgc:SvgViewbox 
                        Source="/resources/icons/icon_regresar.svg"
                        Width="28"
                        Height="28"
                        Stretch="Uniform"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                </Button>

                <TextBlock Text="Pedidos personalizados" 
                       Style="{StaticResource TxtTitulo}" 
                       Margin="20,35,0,20"
                       VerticalAlignment="Center"/>

            </StackPanel>

            <StackPanel Margin="0,120,0,0">

                <ListBox x:Name="lstPedidos"
                     BorderThickness="0"
                     Background="White"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     ItemContainerStyle="{StaticResource PedidoPersonalizadoItemStyle}"
                     d:ItemsSource="{d:SampleData}" SelectionChanged="lstPedidos_SelectionChanged"/>


                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">

                    <Button x:Name="btnAnterior"
                        Content="⟨"
                        Width="40" Height="32"
                        FontSize="18"
                        Background="Transparent"
                        BorderBrush="#FF70B5"
                        BorderThickness="2"
                        Cursor="Hand"/>

                    <TextBlock x:Name="txtPagina"
                           Text="Página 1"
                           Margin="20,0"
                           VerticalAlignment="Center"
                           FontSize="18"/>

                    <Button x:Name="btnSiguiente"
                        Content="⟩"
                        Width="40" Height="32"
                        FontSize="18"
                        Background="Transparent"
                        BorderBrush="#FF70B5"
                        BorderThickness="2"
                        Cursor="Hand"/>

                </StackPanel>
            </StackPanel>

        </Grid>
    </Viewbox>

</Page>