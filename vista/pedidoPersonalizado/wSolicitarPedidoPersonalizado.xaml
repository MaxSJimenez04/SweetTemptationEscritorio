<Page x:Class="sweet_temptation_clienteEscritorio.vista.pedidoPersonalizado.wSolicitarPedidoPersonalziado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.pedidoPersonalizado"
      mc:Ignorable="d" 
      Title="wSolicitarPedidoPersonalizado">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Viewbox
        Stretch="Uniform">
        <Grid Background="#FFFFFF" Height="993" Width="1920">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="700"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0">

                <TextBlock Style="{StaticResource TxtTitulo}"
                           Text="Diseña tu Pastel"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <Border Width="750"
                    Height="750"
                    BorderBrush="#FF70B5"
                    BorderThickness="3"
                    CornerRadius="20"
                    Effect="{StaticResource SombraSuave}">

                    <Grid>

                        <svgc:SvgViewbox x:Name="iconPlaceholder"
                         xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
                         Source="/resources/icons/icon_productos.svg"
                         Width="300" 
                         Height="300"
                         Stretch="Uniform"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Opacity="0.5"/>
                        <Image x:Name="imgPastel"
                           Source="{x:Null}" 
                           Stretch="UniformToFill"
                           Visibility="Collapsed" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    </Grid>
                </Border>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <TextBlock Style="{StaticResource TxtEtiqueta}"
                               Text="Subir Imagen:"
                               VerticalAlignment="Center"
                               FontSize="24"
                               Margin="0,0,20,0"/>
                    <Button Content="Seleccionar Archivo"
                            Style="{StaticResource BtnBlancoStyle}"
                            Width="250"
                            Height="50"
                            Click="btnClickSubirImagen"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,0,150,0" Height="920">

                <TextBlock Style="{StaticResource TxtTitulo}"
                           Text="Especificaciones"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,40"/>

                <TextBlock Style="{StaticResource TxtEtiqueta}" Text="Sabor del Bizcocho:" Margin="0,0,0,10"/>
                <ComboBox x:Name="cbSaborBizcocho"
                          Style="{StaticResource cbEstandar}"
                          Height="60"
                          FontSize="28"
                          Tag="Selecciona un sabor"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="Vainilla"/>
                    <ComboBoxItem Content="Chocolate"/>
                </ComboBox>

                <TextBlock Style="{StaticResource TxtEtiqueta}" Text="Cobertura:" Margin="0,0,0,10"/>
                <ComboBox x:Name="cbCobertura"
                          Style="{StaticResource cbEstandar}"
                          Height="60"
                          FontSize="28"
                          Tag="Selecciona una cobertura"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="Chocolate"/>
                    <ComboBoxItem Content="Vainilla"/>
                    <ComboBoxItem Content="Merengue"/>
                    <ComboBoxItem Content="Crema de Queso"/>
                    <ComboBoxItem Content="Fondant"/>
                </ComboBox>

                <TextBlock Style="{StaticResource TxtEtiqueta}" Text="Relleno:" Margin="0,0,0,10"/>
                <ComboBox x:Name="cbRelleno"
                          Style="{StaticResource cbEstandar}"
                          Height="60"
                          FontSize="28"
                          Tag="Selecciona un relleno"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="Chocolate"/>
                    <ComboBoxItem Content="Vainilla"/>
                    <ComboBoxItem Content="Frutas y Mermeladas"/>
                    <ComboBoxItem Content="Nueces y Frutos Secos"/>
                    <ComboBoxItem Content="Crema de Queso"/>
                </ComboBox>

                <TextBlock Style="{StaticResource TxtEtiqueta}" Text="Tamaño:" Margin="0,0,0,10"/>
                <ComboBox x:Name="cbTamaño"
                          Style="{StaticResource cbEstandar}"
                          Height="60"
                          FontSize="28"
                          Tag="Selecciona un tamaño"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="Mini"/>
                    <ComboBoxItem Content="Pequeño"/>
                    <ComboBoxItem Content="Mediano"/>
                    <ComboBoxItem Content="Grande"/>
                </ComboBox>

                <TextBlock Style="{StaticResource TxtEtiqueta}" Text="Especificaciones Adicionales: (Opcional)" Margin="0,0,0,10"/>
                <TextBox x:Name="txtEspecificaciones"
                         Style="{StaticResource TxtCampo}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Height="120"
                         VerticalContentAlignment="Top"
                         Padding="20"/>

                <Button Content="Enviar Solicitud"
                        Style="{StaticResource BtnRosaStyle}"
                        Width="300"
                        Height="70"
                        FontSize="30"
                        HorizontalAlignment="Left"
                        Margin="0,20,0,0"
                        Click="btnEnviarSolicitud_Click"
                        Name="btnEnviarSolicitud"/>

            </StackPanel>

        </Grid>
    </Viewbox>
</Page>
