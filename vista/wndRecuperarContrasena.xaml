<Window x:Class="sweet_temptation_clienteEscritorio.vista.wndRecuperarContrasena"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sweet Temptation - Recuperar Contraseña" 
        Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <Color x:Key="PinkPrimary">#FF70B5</Color>
        <Color x:Key="PinkLight">#FFA9D3</Color>
        <Color x:Key="PinkDark">#E17BB1</Color>
        <SolidColorBrush x:Key="PinkPrimaryBrush" Color="{StaticResource PinkPrimary}"/>
        <SolidColorBrush x:Key="PinkLightBrush" Color="{StaticResource PinkLight}"/>
        <SolidColorBrush x:Key="PinkDarkBrush" Color="{StaticResource PinkDark}"/>
        
        <Style x:Key="RecuperarTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="54"/>
            <Setter Property="FontFamily" Value="Poppins, Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,15,15,15"/>
            <Setter Property="BorderBrush" Value="{StaticResource PinkPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="5,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="RecuperarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="54"/>
            <Setter Property="Width" Value="208"/>
            <Setter Property="FontFamily" Value="Poppins, Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PinkPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PinkPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PinkDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D16A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFA9D3" Offset="0"/>
                <GradientStop Color="#FFFFFF" Offset="0.25"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Image Source="/resources/images/login/Fondo.png" 
               Stretch="UniformToFill" 
               Opacity="0.66"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        
        <!-- Imágenes decorativas DERECHA (espejado del login) -->
        <Canvas>
            <!-- Chispas - arriba -->
            <Image Source="/resources/images/login/Chispas.png"
                   Width="256" Height="146"
                   Canvas.Left="926" Canvas.Top="20"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <RotateTransform Angle="12"/>
                    </TransformGroup>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="15" Direction="270" Opacity="0.25"/>
                </Image.Effect>
            </Image>
            
            <!-- Crema/Frosting -->
            <Image Source="/resources/images/login/Crema.png"
                   Width="273" Height="220"
                   Canvas.Left="827" Canvas.Top="160"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <RotateTransform Angle="-17"/>
                    </TransformGroup>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="15" Direction="270" Opacity="0.25"/>
                </Image.Effect>
            </Image>
            
            <!-- Bizcocho -->
            <Image Source="/resources/images/login/Bizcocho.png"
                   Width="244" Height="154"
                   Canvas.Left="945" Canvas.Top="420"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <RotateTransform Angle="14"/>
                    </TransformGroup>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="15" Direction="270" Opacity="0.25"/>
                </Image.Effect>
            </Image>
            
            <!-- Envoltura - abajo -->
            <Image Source="/resources/images/login/Envoltura.png"
                   Width="280" Height="213"
                   Canvas.Left="813" Canvas.Top="560"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <RotateTransform Angle="22"/>
                    </TransformGroup>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="15" Direction="270" Opacity="0.25"/>
                </Image.Effect>
            </Image>
        </Canvas>
        
        <!-- Card de Recuperación -->
        <Border Width="454" Height="550"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="150,0,0,0"
                Background="White"
                BorderBrush="{StaticResource PinkPrimaryBrush}"
                BorderThickness="5"
                CornerRadius="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="10" Direction="270" Opacity="0.15"/>
            </Border.Effect>
            
            <Grid>
                <Grid Height="130"
                      VerticalAlignment="Top"
                      Margin="0,-10,0,0">
                    <Grid.Clip>
                        <RectangleGeometry RadiusX="50" RadiusY="50"
                           Rect="0,0,454,130"/>
                    </Grid.Clip>
                    <Image Source="/resources/images/login/drip.png"
                           Stretch="Fill"/>
                </Grid>

                <StackPanel VerticalAlignment="Center" 
                            Margin="45,60,45,40">
                    
                    <Image Source="/resources/images/login/logo_cupcake.png"
                           Width="80" Height="108"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                    
                    <TextBlock Text="SweetTemptation"
                               FontFamily="Pacifico, Segoe Script, Segoe UI"
                               FontSize="24"
                               Foreground="{StaticResource PinkDarkBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Recuperar Contraseña"
                               FontFamily="Poppins, Segoe UI"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Ingresa tu correo electrónico y te enviaremos un código para restablecer tu contraseña."
                               FontFamily="Poppins, Segoe UI"
                               FontSize="12"
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    
                    <!-- Campo Correo -->
                    <Grid Margin="0,0,0,30">
                        <TextBox x:Name="txtCorreo"
                                 Style="{StaticResource RecuperarTextBoxStyle}"/>
                        <TextBlock Text="Correo electrónico"
                                   FontFamily="Poppins, Segoe UI"
                                   FontSize="14"
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0"
                                   IsHitTestVisible="False"
                                   x:Name="placeholderCorreo">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtCorreo}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    
                    <!-- Botón Enviar Código -->
                    <Button x:Name="btnEnviarCodigo"
                            Content="Enviar Código"
                            Style="{StaticResource RecuperarButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="btnEnviarCodigo_Click"/>
                    
                    <!-- Link Volver al Login -->
                    <TextBlock x:Name="linkVolverLogin"
                               Text="Volver al inicio de sesión"
                               FontFamily="Poppins, Segoe UI"
                               FontSize="12"
                               Foreground="#277DEE"
                               Cursor="Hand"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,0"
                               MouseLeftButtonDown="linkVolverLogin_Click">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

