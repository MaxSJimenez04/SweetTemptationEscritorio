<Page x:Class="sweet_temptation_clienteEscritorio.vista.cliente.wPrincipalCliente"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="Panel de Cliente"
      Background="White"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Viewbox
    Stretch="Uniform">
        <Grid Background="#FFFFFF" Height="993" Width="1920">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Parte de abajo-->
            <Grid
                Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="800"/>
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <TextBlock
                        Grid.Row="0"
                        Text="UNA TENTACIÃ“N SEGURA"
                        FontFamily="pack://application:,,,/resources/fonts/#Prata"
                        FontSize="28"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Padding="20"/>

                    <TextBlock
                        Grid.Row="1"
                        FontFamily="pack://application:,,,/resources/fonts/#Prata"
                        FontSize="85"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" Width="682">
                        
                        <Run Text="Obten tu propia mordida de " Foreground="Black"/>
                        <Run Text="dulzura" Foreground="#FF70B5"/>

                    </TextBlock>
                    <Button
                        Grid.Row="2"
                        Width="220"
                        Height="65"
                        FontSize="27"
                        VerticalAlignment="Top"
                        Style="{StaticResource BtnRosaStyle}"
                        Content="Ordena Ahora"
                        Margin="40" Click="Button_Click">

                    </Button>

                </Grid>

                <Image 
                    Grid.Column="1"
                    Source="/resources/images/cupcake.png"
                    HorizontalAlignment="Left"/>

            </Grid>
        </Grid>
    </Viewbox>
</Page>




