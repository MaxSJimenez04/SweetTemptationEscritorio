<Window x:Class="sweet_temptation_clienteEscritorio.vista.wndLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sweet Temptation - Login" 
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colores -->
        <Color x:Key="PinkPrimary">#FF70B5</Color>
        <Color x:Key="PinkLight">#FFA9D3</Color>
        <Color x:Key="PinkDark">#E17BB1</Color>
        <SolidColorBrush x:Key="PinkPrimaryBrush" Color="{StaticResource PinkPrimary}"/>
        <SolidColorBrush x:Key="PinkLightBrush" Color="{StaticResource PinkLight}"/>
        <SolidColorBrush x:Key="PinkDarkBrush" Color="{StaticResource PinkDark}"/>

        <!-- Estilo para TextBox -->
        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="54"/>
            <Setter Property="FontFamily" Value="Poppins, Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,15,15,15"/>
            <Setter Property="BorderBrush" Value="{StaticResource PinkPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="5,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style x:Key="LoginPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="54"/>
            <Setter Property="FontFamily" Value="Poppins, Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,15,15,15"/>
            <Setter Property="BorderBrush" Value="{StaticResource PinkPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="5,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para el botón de login -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="54"/>
            <Setter Property="Width" Value="208"/>
            <Setter Property="FontFamily" Value="Poppins, Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PinkPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PinkPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PinkDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D16A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Fondo principal con gradiente -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFA9D3" Offset="0"/>
                <GradientStop Color="#FFFFFF" Offset="0.25"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Fondo con patrón de iconos -->
        <Image Source="/resources/images/login/Fondo.png" 
               Stretch="UniformToFill" 
               Opacity="0.66"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <!-- Imágenes decorativas izquierda -->
        <Canvas>
            <!-- Chispas -->
            <Image Source="/resources/images/login/Chispas.png"
                   Width="256" Height="146"
                   Canvas.Left="336" Canvas.Top="69" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Image.RenderTransform>
                    <RotateTransform Angle="-12"/>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="15" Direction="270" Opacity="0.25"/>
                </Image.Effect>
            </Image>

            <!-- Crema/Frosting -->
            <Image Source="/resources/images/login/Crema.png"
                   Width="273" Height="220"
                   Canvas.Left="473" Canvas.Top="141" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image.RenderTransform>
                    <RotateTransform Angle="17"/>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="15" Direction="270" Opacity="0.25"/>
                </Image.Effect>
            </Image>

            <!-- Bizcocho -->
            <Image Source="/resources/images/login/Bizcocho.png"
                   Width="244" Height="154"
                   Canvas.Left="288" Canvas.Top="412">
                <Image.RenderTransform>
                    <RotateTransform Angle="-14"/>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="15" Direction="270" Opacity="0.25"/>
                </Image.Effect>
            </Image>

            <!-- Envoltura -->
            <Image Source="/resources/images/login/Envoltura.png"
                   Width="280" Height="213"
                   Canvas.Left="418" Canvas.Top="586" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Image.RenderTransform>
                    <RotateTransform Angle="-22"/>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="15" Direction="270" Opacity="0.25"/>
                </Image.Effect>
            </Image>
        </Canvas>

        <!-- Card de Login -->
        <Border Width="454" Height="677"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,150,0"
                Background="White"
                BorderBrush="{StaticResource PinkPrimaryBrush}"
                BorderThickness="5"
                CornerRadius="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="10" Direction="270" Opacity="0.15"/>
            </Border.Effect>

            <Grid>
                <!-- Efecto de goteo rosa -->
                <Grid Height="130"
                      VerticalAlignment="Top"
                      Margin="0,-10,0,0">

                    <!-- Clip con esquinas redondeadas superiores -->
                    <Grid.Clip>
                        <RectangleGeometry RadiusX="50" RadiusY="50"
                           Rect="0,0,454,130"/>
                    </Grid.Clip>

                    <Image Source="/resources/images/login/drip.png"
                           Stretch="Fill"/>
                </Grid>

                <!-- Contenido del card -->
                <StackPanel VerticalAlignment="Center" 
                            Margin="45,80,45,40">

                    <!-- Logo -->
                    <Image Source="/resources/images/login/logo_cupcake.png"
                           Width="80" Height="108"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                    <!-- Título -->
                    <TextBlock Text="SweetTemptation"
                               FontFamily="Pacifico, Segoe Script, Segoe UI"
                               FontSize="24"
                               Foreground="{StaticResource PinkDarkBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,50"/>

                    <!-- Campo Usuario -->
                    <Grid Margin="0,0,0,20">
                        <TextBox x:Name="txtUsuario"
                                 Style="{StaticResource LoginTextBoxStyle}"
                                 Tag="Usuario"/>
                        <TextBlock Text="Usuario"
                                   FontFamily="Poppins, Segoe UI"
                                   FontSize="14"
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0"
                                   IsHitTestVisible="False"
                                   x:Name="placeholderUsuario">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtUsuario}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Campo Contraseña -->
                    <Grid Margin="0,0,0,40">
                        <PasswordBox x:Name="txtContrasena"
                                     Style="{StaticResource LoginPasswordBoxStyle}"/>
                        <TextBlock Text="Contraseña"
                                   FontFamily="Poppins, Segoe UI"
                                   FontSize="14"
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0"
                                   IsHitTestVisible="False"
                                   x:Name="placeholderContrasena"
                                   Visibility="Visible"/>
                    </Grid>

                    <!-- Botón Iniciar Sesión -->
                    <Button x:Name="btnIniciarSesion"
                            Content="Iniciar sesión"
                            Style="{StaticResource LoginButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="btnIniciarSesion_Click"/>

                    <!-- Link Olvidaste Contraseña -->
                    <TextBlock x:Name="linkOlvidasteContrasena"
                               Text="¿Olvidaste tu contraseña?"
                               FontFamily="Poppins, Segoe UI"
                               FontSize="12"
                               Foreground="#277DEE"
                               Cursor="Hand"
                               HorizontalAlignment="Center"
                               Margin="0,60,0,0"
                               MouseLeftButtonDown="linkOlvidasteContrasena_Click">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
