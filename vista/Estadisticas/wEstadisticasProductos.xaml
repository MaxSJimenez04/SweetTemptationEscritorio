<Page x:Class="sweet_temptation_clienteEscritorio.vista.Estadisticas.wEstadisticasProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.Estadisticas"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="wEstadisticasProductos">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#FFF7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Estadísticas de Productos" FontSize="30" Style="{StaticResource TxtTitulo}"
                 Margin="25" />

        <ComboBox x:Name="cbRangoFecha" Grid.Column="1" Grid.Row="0" Height="60" Width="550" HorizontalAlignment="Right" Margin="10"
                  Focusable="True" IsEditable="True" IsReadOnly="True" Text=" Seleccionar Rango " Style="{StaticResource cbEstandar}"
                  SelectionChanged="cbRangoFecha_SelectionChanged"/>

        <Grid Grid.Column="0" Grid.Row="1">
            <TextBlock x:Name="txtPeriodo" Text="Periodo: " FontSize="25" Style="{StaticResource TxtTitulo}" Margin="10"/>
            <TextBlock Text="Mejores vendidos" FontSize="15" Margin="10,75,0,0" Style="{StaticResource TxtEtiqueta}"/>

            <DataGrid x:Name="tbMejoresProductos" Height="200" Width="420" VerticalAlignment="Center" Margin="0,0,0,170"
                     AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                      ColumnHeaderStyle="{StaticResource dgHeaderEstandar}" Style="{StaticResource dgEstandar}">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="Producto"
                        Binding="{Binding nombre}"
                        CellStyle="{StaticResource dgCellEstandar}"
                        Width="*"/>
                    <DataGridTextColumn
                        Header="Veces comprado"
                        Binding="{Binding ventas}"
                        CellStyle="{StaticResource dgCellEstandar}"
                        Width="0.5*"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Peores vendidos" FontSize="15" Margin="10,100,0,10" 
                       VerticalAlignment="Center" Style="{StaticResource TxtEtiqueta}"/>

                <DataGrid x:Name="tbPeoresProductos" Height="200" Width="420" VerticalAlignment="Bottom" Margin="0,0,0,25"
                       AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                     ColumnHeaderStyle="{StaticResource dgHeaderEstandar}" Style="{StaticResource dgEstandar}">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="Producto"
                        Binding="{Binding nombre}"
                        CellStyle="{StaticResource dgCellEstandar}"
                        Width="*"/>
                    <DataGridTextColumn 
                        Header="Veces comprado"
                        Binding="{Binding ventas}"
                        CellStyle="{StaticResource dgCellEstandar}"
                        Width="0.5*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="Ver ventas por producto" FontSize="24" Style="{StaticResource TxtTitulo}"
                   Margin="10"/>
        <ComboBox x:Name="cbNombreProducto" Grid.Column="1" Grid.Row="1"
                  Height="50" Width="640" HorizontalAlignment="Center" VerticalAlignment="Top"
                  Margin="10,50,0,0" IsEditable="True" Focusable="True" IsReadOnly="True" Text="Selecciona un producto"
                  DisplayMemberPath="Nombre" SelectedValuePath="IdProducto" Style="{StaticResource cbEstandar}" SelectionChanged="cbNombreProducto_SelectionChanged"/>

        <Grid Grid.Row="1" Grid.Column="1" Margin="10,100,0,0" Width="700" Height="450">
            
        </Grid>

    </Grid>
</Page>
