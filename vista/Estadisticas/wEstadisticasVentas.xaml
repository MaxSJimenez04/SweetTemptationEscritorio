<Page x:Class="sweet_temptation_clienteEscritorio.vista.Estadisticas.wEstadisticasVentas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.Estadisticas"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="wEstadisticasVentas">

    <Page.Resources>
        <Style x:Key="DataGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="{DynamicResource color1}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="BorderBrush" Value="{DynamicResource color3}"/>
            <Setter Property="BorderThickness" Value="0 0 1 1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{DynamicResource letterColor1}"/>
            <Setter Property="Height" Value="35"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource color2}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredColumnStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="RightAlignedColumnStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                        <Border x:Name="PART_ContentHost"
                                Focusable="False"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboToggleButton" TargetType="{x:Type ToggleButton}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" CornerRadius="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" />
                <Path x:Name="Arrow" Grid.Column="1" Fill="#F06292" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M0,0 L4,4 L8,0 Z"/>
            </Grid>
        </ControlTemplate>

        <Style x:Key="RoundedComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          Template="{StaticResource ComboToggleButton}" 
                                          Grid.Column="2" 
                                          Focusable="false" 
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" 
                                          ClickMode="Press"/>
                            <ContentPresenter Name="ContentSite" 
                                              IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}" 
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                              Margin="15,0,30,0" 
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Left" />
                            <Popup Name="Popup" Placement="Bottom" 
                                   IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" 
                                   Focusable="False" 
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" 
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" 
                                            Background="White" 
                                            BorderThickness="1" 
                                            BorderBrush="#E0E0E0" 
                                            CornerRadius="8" 
                                            Margin="0,5,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF70B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#FF5A8F"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF8AA4C4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" ShadowDepth="1" Opacity="0.1" BlurRadius="3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Background="#FFF7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button x:Name="BtnRegresar" 
                Grid.Column="0"
                Height="30" Width="60"
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="5,50,0,0"
                Style="{StaticResource iconButton}" Click="BtnRegresarClick">
                <svgc:SvgViewbox Source="/resources/icons/icon_regresar.svg"/>
            </Button>
            
            <Border Grid.Row="0"
                    Background="White"
                    CornerRadius="10"
                    Margin="70,20,20,20">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" Direction="270" ShadowDepth="2" Opacity="0.5" BlurRadius="5"/>
                </Border.Effect>

                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Fecha Inicial:" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                    <Border Grid.Column="1"
                            Width="220" Height="40"
                            Background="White" 
                            BorderBrush="#CCCCCC" 
                            BorderThickness="1"
                            CornerRadius="8">
                        <DatePicker x:Name="dpFechaInicial" 
                                    VerticalAlignment="Center" 
                                    Margin="5,0,0,0"/>
                    </Border>

                    <Label Content="Fecha Final:" Grid.Column="3" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                    <Border Grid.Column="4"
                            Width="220" Height="40"
                            Background="White" 
                            BorderBrush="#CCCCCC" 
                            BorderThickness="1"
                            CornerRadius="8">
                        <DatePicker x:Name="dpFechaFinal" 
                                    VerticalAlignment="Center" 
                                    Margin="5,0,0,0"/>
                    </Border>

                    <Label Content="Estado:" Grid.Column="6" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                    <ComboBox x:Name="cbEstadoVenta" 
                              Grid.Column="7" 
                              SelectedIndex="0" 
                              Style="{StaticResource RoundedComboBoxStyle}"
                              Width="220" Height="40">
                        <ComboBoxItem Content="Todas"/>
                        <ComboBoxItem Content="Completada"/>
                        <ComboBoxItem Content="Cancelada"/>
                    </ComboBox>

                    <Button x:Name="BtnLimpiar"
                            Grid.Column="9"
                            Width="40"
                            Height="40"
                            Margin="5"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#E0E0E0"
                            Click="BtnLimpiar_Click">
                        <fa:IconImage Icon="Eraser" Foreground="#555" Width="20" Height="20"/>
                    </Button>

                    <Button x:Name="btnBuscar" 
                            Grid.Column="10" 
                            Content="Buscar" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#FF70B5"
                            Click="btnBuscar_Click"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20,0,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ventas realizadas" 
                           Grid.Row="0"
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15" 
                           Foreground="{DynamicResource letterColor1}"/>

                <DataGrid x:Name="dgVentas" 
                          Grid.Row="1"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          AlternatingRowBackground="#F5F5F5"
                          GridLinesVisibility="Horizontal" 
                          HorizontalGridLinesBrush="#E0E0E0"
                          BorderBrush="#CCCCCC" 
                          BorderThickness="1" 
                          HeadersVisibility="Column"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Usuario"
                                            Binding="{Binding NombreRol}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredColumnStyle}"/>
                        <DataGridTextColumn Header="Tipo de Pedido" 
                                            Binding="{Binding TipoPedido}" 
                                            Width="*" 
                                            ElementStyle="{StaticResource CenteredColumnStyle}"/>

                        <DataGridTextColumn Header="Fecha de Compra" 
                                            Binding="{Binding FechaCompra, StringFormat='dd/MM/yyyy'}" 
                                            Width="*" 
                                            ElementStyle="{StaticResource CenteredColumnStyle}"/>

                        <DataGridTextColumn Header="Estado" 
                                            Binding="{Binding Estado}" 
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredColumnStyle}"/>

                        <DataGridTextColumn Header="Total (MXN)" 
                                            Binding="{Binding Total, StringFormat='C'}" 
                                            Width="0.8*" 
                                            ElementStyle="{StaticResource RightAlignedColumnStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,20,0,0">

                    <Button x:Name="btnDescargar"
                            Width="200"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#FF70B5"
                            Click="btnDescargar_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <fa:IconImage Icon="Download" Width="20" Height="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Descargar CSV"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>