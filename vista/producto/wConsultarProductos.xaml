<Page x:Class="sweet_temptation_clienteEscritorio.vista.producto.wConsultarProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.producto"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="wRegistrarProducto">
    <Page.Resources>
        <DropShadowEffect x:Key="shadowDepth1" 
                          Color="#000000" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="5" 
                          Opacity="0.15"/>

        <Style x:Key="roundButtonCard" TargetType="Button">
            <Setter Property="Background" Value="#FFB6C1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#FFF7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Barra de opciones-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <fa:IconImage Icon="CakeCandles"
                      Height="40"
                      Width="40"
                      Foreground="#000000"
                      Margin="35,0,10,0"/>
                <TextBlock Text="Productos"
                   Foreground="#000000"
                   FontSize="30"
                   FontFamily="Montserrat"
                   FontWeight="Medium"
                   VerticalAlignment="Center"/>

            </StackPanel>

            <!--Opciones para el usuario-->
            <StackPanel Grid.Column="1"
                Orientation="Horizontal"
                FlowDirection="RightToLeft"
                VerticalAlignment="Center"
                Margin="0,0,20,0">

                <Button Style="{StaticResource iconButton}"
            Tag="{StaticResource color1}">
                    <fa:IconImage Icon="AngleDown" Style="{StaticResource iconButtonIcon}"/>
                </Button>

                <TextBlock Text="Usuario"
                   Foreground="{DynamicResource letterColor1}"
                   FontFamily="Montserrat"
                   FontSize="30"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"/>

                <Ellipse Height="80" Width="80"
                 Stroke="{DynamicResource letterColor3}"
                 StrokeThickness="2"
                 Margin="5,0,10,0">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/resources/images/FotoUsuario.png"/>
                    </Ellipse.Fill>

                </Ellipse>

                <Button Style="{StaticResource iconButton}"
                Margin="5,0,12,0"
            Tag="{StaticResource color1}">
                    <fa:IconImage Icon="CartShopping" Style="{StaticResource iconButtonIcon}"/>
                </Button>

                <Button Style="{StaticResource iconButton}"
                Margin="12,0,12,0"
            Tag="{StaticResource color1}">
                    <fa:IconImage Icon="House" Style="{StaticResource iconButtonIcon}"/>
                </Button>

                <Button Style="{StaticResource iconButton}"
                Margin="11,0,0,0"
            Tag="{StaticResource color1}">
                    <fa:IconImage Icon="ChevronCircleRight" Style="{StaticResource iconButtonIcon}"/>
                </Button>

            </StackPanel>
        </Grid>

        <Border BorderBrush="{DynamicResource color3}"
        BorderThickness="0 0 0 3"
        Margin="5,0,10,-2">
            <StackPanel Grid.Row="0"
                Orientation="Vertical">
            </StackPanel>
        </Border>

        <!-- corte -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="20">
            <ItemsControl x:Name="ItemsControlProductos"
                          Focusable="False">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Center"
                                   ItemWidth="300" 
                                   ItemHeight="350"
                                   Margin="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="15"
                                Background="White"
                                Margin="15"
                                BorderBrush="#E8E8E8"
                                BorderThickness="1"
                                Effect="{StaticResource shadowDepth1}">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0"
                                        CornerRadius="15 15 0 0">
                                    <Image Source="{Binding ImagenProducto}" 
                                           Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Row="1"
                                            Margin="15,10">

                                    <TextBlock Text="{Binding Nombre}"
                                               FontSize="20"
                                               FontFamily="Montserrat"
                                               FontWeight="Bold"
                                               Foreground="#333333"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,5"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Precio, StringFormat={}{0:C}}"
                                                   FontSize="22"
                                                   FontFamily="Montserrat"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#8B4513"/>

                                        <Button Grid.Column="1"
                                                Content="Ver más"
                                                Style="{StaticResource roundButtonCard}"
                                                Width="100"
                                                Height="35"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Page>
