<Page x:Class="sweet_temptation_clienteEscritorio.vista.producto.wModificarProducto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.producto"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="wModificarProducto">

    <!-- Recursos -->
    <Page.Resources>

        <!-- Etiquetas -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="DarkGray"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="Margin" Value="5,18,0,8"/>
        </Style>

        <!-- Base de los datos -->
        <Style x:Key="FormBaseInput" TargetType="Control">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="5,0,0,10"/>
        </Style>

        <!-- TextBox -->
        <Style x:Key="FormTextBox" TargetType="TextBox" BasedOn="{StaticResource FormBaseInput}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="FormComboBox" TargetType="ComboBox" BasedOn="{StaticResource FormBaseInput}">
            <Setter Property="Padding" Value="5,0,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Boton -->
        <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    Width="220" Height="60"
                    CornerRadius="25"
                    SnapsToDevicePixels="True">
                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>

    </Page.Resources>

    <!--  Scroll -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <StackPanel Background="#FFF7F7" Margin="0,0,0,30">

            <TextBlock Text="Modificación de Producto"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="#FF5A8F"
                       Margin="80,45,0,10"/>


            <!-- Grid principal -->
            <Grid Margin="70,20,70,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>


                <!-- Imagen -->
                <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            Margin="0,10,30,0">

                    <TextBlock Text="Imagen del Producto"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Foreground="DarkGray"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>

                    <Border Width="300" Height="300"
                            BorderBrush="LightGray"
                            BorderThickness="2"
                            CornerRadius="10"
                            Background="#E0E0E0"
                            Margin="0,10,0,30">

                        <Image x:Name="imgProducto"
                               Stretch="UniformToFill"/>
                    </Border>

                    

                </StackPanel>



                <!--Formulario-->
                <StackPanel Grid.Column="1"
                            Margin="40,0,0,0">

                    <TextBlock Text="Nombre" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtNombreProducto"
                             Style="{StaticResource FormTextBox}"
                             IsReadOnly="True"/>

                    <TextBlock Text="Descripción" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtDescripcion"
                             Style="{StaticResource FormTextBox}"
                             Height="120"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"/>

                    <TextBlock Text="Categoría" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbCategoria"
                              Style="{StaticResource FormComboBox}"
                              IsEnabled="False"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Precio Unitario" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtPrecioUnitario"
                                     Style="{StaticResource FormTextBox}"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Unidades (Stock)" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtUnidades"
                                     Style="{StaticResource FormTextBox}"
                                     IsReadOnly="True"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Fecha de Registro" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtFechaRegistro"
                             Style="{StaticResource FormTextBox}"
                             IsReadOnly="True"/>

                    <TextBlock Text="Disponible" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbDisponible"
                              Style="{StaticResource FormComboBox}"
                              IsEnabled="False">
                        <ComboBoxItem Content="Sí"/>
                        <ComboBoxItem Content="No"/>
                    </ComboBox>

                </StackPanel>

            </Grid>
            
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,40,70,0">

                <Button x:Name="btnAccion"
                        Content="Modificar"
                        Foreground="White"
                        Background="#FF5A8F"
                        FontSize="22"
                        Width="220"
                        Height="60"
                        Template="{StaticResource ButtonTemplate}"
                        Click="btnAccion_Click"
                        Margin="0,0,20,0"/>

                <Button x:Name="btnCancelar"
                        Content="Cancelar"
                        Foreground="White"
                        Background="#FCC8D1"
                        FontSize="22"
                        Width="220"
                        Height="60"
                        Template="{StaticResource ButtonTemplate}"
                        Click="btnCancelar_Click"/>

            </StackPanel>

        </StackPanel>

    </ScrollViewer>

</Page>

