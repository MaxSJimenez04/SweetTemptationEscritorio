<Page x:Class="sweet_temptation_clienteEscritorio.vista.producto.wAdministrarProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="Administración de Productos"
      FontFamily="Montserrat"
      RenderOptions.BitmapScalingMode="HighQuality">

    <Page.Resources>

        <!-- BOTÓN ESTILO ADMIN -->
        <Style x:Key="AdminButton" TargetType="Button">
            <Setter Property="Background" Value="#FFB6C1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F06292"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo de disponibilidad -->
        <Style x:Key="DisponibilidadCell" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Disponible}" Value="False">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Estilos DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>

    </Page.Resources>

    <Grid Background="#FFFBFBFB">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========== ENCABEZADO SUPERIOR ========== -->
        <Grid Grid.Row="0" Margin="30,20,50,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <fa:IconImage Icon="Boxes" Foreground="#F06292" Height="25" Margin="0,0,10,0"/>
                <TextBlock Text="Inventario y Gestión de Productos"
                           FontSize="26" FontWeight="Bold" Foreground="#333"/>
            </StackPanel>

            <Button Grid.Column="1" Style="{StaticResource AdminButton}" Background="#4CAF50"
                    Width="200" Click="BtnAgregarProducto_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Plus" Foreground="White" Height="14" Margin="0,0,5,0"/>
                    <TextBlock Text="AGREGAR "/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- ========== CONTENIDO CON BUSCADOR ========== -->
        <Grid Grid.Row="1" Margin="50,10,50,40">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>   
                <RowDefinition Height="*"/>      
            </Grid.RowDefinitions>

            <!-- 🔎 BARRA DE BÚSQUEDA + FILTRO CATEGORÍA -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- BUSCADOR -->
                <Border Grid.Column="1"
                        Width="320" Height="42"
                        Background="White"
                        CornerRadius="20"
                        Margin="0,0,20,0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        VerticalAlignment="Center">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <fa:IconImage Icon="Search" 
                                      Foreground="#999" Height="16"
                                      Margin="15,0,10,0"/>

                        <TextBox x:Name="TxtBuscar"
                                 Grid.Column="1"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"
                                 Foreground="#555"
                                 Text="Buscar producto..."
                                 GotFocus="TxtBuscar_GotFocus"
                                 LostFocus="TxtBuscar_LostFocus"
                                 TextChanged="TxtBuscar_TextChanged"/>
                    </Grid>
                </Border>

                <!-- COMBOBOX CATEGORÍAS -->
                <!-- COMBOBOX CATEGORÍAS CON PLACEHOLDER "Categorías" -->
                <Border Grid.Column="2"
        Width="220" Height="42"
        Background="White"
        CornerRadius="20"
        Margin="0,0,0,0"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        VerticalAlignment="Center">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Ícono -->
                            <ColumnDefinition Width="*"/>
                            <!-- Texto / Selección -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Flecha -->
                        </Grid.ColumnDefinitions>

                        <!-- ÍCONO 📂 -->
                        <fa:IconImage Icon="Folder"
                      Foreground="#999"
                      Height="16"
                      Margin="15,0,10,0"
                      VerticalAlignment="Center"/>

                        <!-- COMBOBOX TRANSPARENTE -->
                        <ComboBox x:Name="CmbCategoriasFiltro"
                  Grid.Column="1"
                  Background="Transparent"
                  BorderThickness="0"
                  Foreground="#555"
                  VerticalContentAlignment="Center"
                  Cursor="Hand"
                  SelectionChanged="CmbCategoriasFiltro_SelectionChanged"
                  Padding="0"
                  FontSize="14"
                  IsEditable="True"
                  IsReadOnly="True"
                  Text="Categorías" />

                        <!-- FLECHA ▼ -->
                        <fa:IconImage Icon="ChevronDown"
                      Grid.Column="2"
                      Foreground="#999"
                      Height="12"
                      Margin="5,0,15,0"
                      VerticalAlignment="Center"/>
                    </Grid>

                </Border>

            </Grid>

            <!-- ========== TABLA CON BORDE REDONDEADO ========== -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Border Background="White"
                        Padding="20"
                        CornerRadius="15"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">

                    <DataGrid x:Name="DataGridProductos"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              AlternatingRowBackground="#F9F9F9"
                              RowHeaderWidth="0"
                              Background="White"
                              BorderThickness="0"
                              CellStyle="{StaticResource DataGridCellStyle}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="250"/>
                            <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat={}{0:C}}" Width="100"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Unidades}" Width="70"/>

                            <DataGridTemplateColumn Header="Disponible" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TextoDisponibilidad}"
                                                   Style="{StaticResource DisponibilidadCell}"
                                                   HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Fec. Registro" Binding="{Binding FechaRegistro, StringFormat='{}{0:dd/MM/yyyy}'}" Width="120"/>

                            <DataGridTemplateColumn Header="Acciones" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Modificar" Style="{StaticResource AdminButton}"
                                                    Background="#FFC107"
                                                    Click="BtnModificar_Click"
                                                    Tag="{Binding}"/>
                                            <Button Content="Eliminar" Style="{StaticResource AdminButton}"
                                                    Background="#E53935"
                                                    Click="BtnEliminar_Click"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>
                </Border>
            </ScrollViewer>

        </Grid>
    </Grid>
</Page>
