<Page x:Class="sweet_temptation_clienteEscritorio.vista.producto.wConsultarProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.producto"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="Catálogo de Productos"
      FontFamily="Montserrat">

    <Page.Resources>
        <DropShadowEffect x:Key="cardShadow" Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.1"/>

        <Style x:Key="btnAddCart" TargetType="Button">
            <Setter Property="Background" Value="#FFB6C1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F06292"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" CornerRadius="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" />
                <fa:IconImage Grid.Column="1" Icon="ChevronDown" Height="12" Width="12" Foreground="#F06292" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </Grid>
        </ControlTemplate>

        <Style x:Key="RoundedComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}" Grid.Column="2" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press"/>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="15,0,30,0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="White" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="10" Margin="0,5,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#FFFBFBFB">

        <Grid x:Name="GridCatalogo">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="30,20,30,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="Store" Foreground="#F06292" Height="25" Margin="0,0,10,0"/>
                    <TextBlock Text="Nuestros Postres" FontSize="26" FontWeight="Bold" Foreground="#333"/>
                </StackPanel>

                <Border Grid.Column="2" Width="300" Height="40" Background="White" CornerRadius="20" Margin="0,0,20,0" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <fa:IconImage Icon="Search" Foreground="#999" Height="16" Margin="15,0,10,0"/>
                        <TextBox x:Name="TxtBuscar" Grid.Column="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" FontSize="14" Foreground="#555" Text="Buscar postre..." GotFocus="TxtBuscar_GotFocus" LostFocus="TxtBuscar_LostFocus" TextChanged="TxtBuscar_TextChanged"/>
                    </Grid>
                </Border>

                <ComboBox x:Name="CmbCategorias" Grid.Column="3" Width="220" Height="40" Style="{StaticResource RoundedComboBox}" Cursor="Hand" SelectionChanged="CmbCategorias_SelectionChanged">
                    <ComboBoxItem Content="Todas las Categorías" IsSelected="True"/>
                </ComboBox>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,0">
                <ItemsControl x:Name="ItemsControlProductos" Focusable="False">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="280" Height="380" Background="White" CornerRadius="15" Margin="15" BorderBrush="#F0F0F0" BorderThickness="1" Effect="{StaticResource cardShadow}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="180"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="60"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" CornerRadius="15,15,0,0">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding ImagenProducto}" Stretch="UniformToFill"/>
                                        </Border.Background>
                                        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" CornerRadius="10" Padding="10,4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EstaDisponible}" Value="False">
                                                            <Setter Property="Background" Value="#E53935"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding TextoDisponibilidad}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                        </Border>
                                    </Border>

                                    <StackPanel Grid.Row="1" Margin="15,10,15,0">
                                        <TextBlock Text="{Binding Nombre}" FontSize="18" FontWeight="Bold" Foreground="#333" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Precio, StringFormat={}{0:C}}" FontSize="16" Foreground="#F06292" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Descripcion}" FontSize="12" Foreground="#888" TextTrimming="CharacterEllipsis" MaxHeight="40" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <Button Grid.Row="2" Content="Ver Detalle" Style="{StaticResource btnAddCart}" Margin="15,0,15,15" Click="BtnVerDetalle_Click" Tag="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid x:Name="OverlayDetalle" Visibility="Collapsed">
            <Border Background="Black" Opacity="0.6" MouseDown="BtnCerrarModal_Click"/>

            <Border Width="850" Height="500" Background="White" CornerRadius="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="20,0,0,20" Margin="5">
                        <Border.Background>
                            <ImageBrush x:Name="ImgDetalle" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>

                    <Grid Grid.Column="1" Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="BtnCerrarModal_Click">
                            <fa:IconImage Icon="Times" Foreground="#999" Height="20"/>
                        </Button>

                        <TextBlock x:Name="TxtDetalleNombre" Grid.Row="1" Text="Nombre Producto" FontSize="28" FontWeight="Bold" Foreground="#333" TextWrapping="Wrap"/>

                        <ScrollViewer Grid.Row="2" Margin="0,15">
                            <TextBlock x:Name="TxtDetalleDescripcion" Text="Descripción..." FontSize="14" Foreground="#666" TextWrapping="Wrap" LineHeight="22"/>
                        </ScrollViewer>

                        <StackPanel Grid.Row="3" HorizontalAlignment="Right" Margin="0,0,0,15">
                            <TextBlock Text="Total:" FontSize="12" Foreground="#999" HorizontalAlignment="Right"/>
                            <TextBlock x:Name="TxtDetallePrecioTotal" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="#F06292"/>
                        </StackPanel>

                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="25" Height="50" Width="140">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button Content="-" Width="40" Background="Transparent" BorderThickness="0" FontSize="20" FontWeight="Bold" Foreground="#F06292" Click="BtnMenos_Click"/>
                                    <TextBlock x:Name="TxtCantidad" Text="1" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
                                    <Button Content="+" Width="40" Background="Transparent" BorderThickness="0" FontSize="20" FontWeight="Bold" Foreground="#F06292" Click="BtnMas_Click"/>
                                </StackPanel>
                            </Border>

                            <Button x:Name="BtnAgregarConfirmar" Grid.Column="1" Margin="20,0,0,0" Style="{StaticResource btnAddCart}" Height="50" Click="BtnAgregarAlPedido_Click">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="CartPlus" Foreground="White" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="AGREGAR AL PEDIDO" VerticalAlignment="Center" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>
    