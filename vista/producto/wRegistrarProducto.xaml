<Page x:Class="sweet_temptation_clienteEscritorio.vista.producto.wRegistrarProducto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.producto"
      xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1280"
      Title="Registrar Producto">

    <!-- Recursos -->
    <Page.Resources>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="Margin" Value="5,12,0,5"/>
        </Style>

        <Style x:Key="FormBaseInput" TargetType="Control">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox"
               BasedOn="{StaticResource FormBaseInput}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox"
               BasedOn="{StaticResource FormBaseInput}">
            <Setter Property="Padding" Value="5,0,0,0"/>
        </Style>

        <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
            <Border Width="220" Height="60" Background="{TemplateBinding Background}" CornerRadius="30">
                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </ControlTemplate>

    </Page.Resources>


    <Grid Background="#FFF7F7">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="70,35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Registro de Nuevo Producto"
                       FontSize="34"
                       FontWeight="Bold"
                       Foreground="#FF5A8F"
                       Margin="0,0,0,20"
                       Grid.ColumnSpan="2"/>

            <!-- Formulario -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,60,50,0">

                <TextBlock Text="Nombre" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="txtNombreProducto" Style="{StaticResource FormTextBox}"/>

                <TextBlock Text="Descripción" Style="{StaticResource FormLabel}" Margin="0,25,0,0"/>
                <TextBox x:Name="txtDescripcion"
                         Style="{StaticResource FormTextBox}"
                         Height="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Categoría" Style="{StaticResource FormLabel}" Margin="0,25,0,5"/>
                <ComboBox x:Name="cmbCategoria" Style="{StaticResource FormComboBox}"/>

                <Grid Margin="0,25,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Precio unitario" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtPrecioUnitario" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock Text="Unidades (Stock)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtUnidades" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                </Grid>

            </StackPanel>


            <!-- Imagen -->
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        Margin="50,60,0,20"
                        HorizontalAlignment="Center">

                <TextBlock Text="Vista Previa de la Imagen"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#808080"
                           HorizontalAlignment="Center"/>

                <Border Width="250" Height="250"
                        BorderBrush="LightGray"
                        BorderThickness="2"
                        Background="#E0E0E0"
                        CornerRadius="5"
                        Margin="0,10,0,40">

                    <Image x:Name="imgProducto"
                           Stretch="UniformToFill"/>
                </Border>

                <Button x:Name="btnCargarImagen"
                        Content="Cargar Imagen"
                        Width="250" Height="50"
                        Background="#FF5A8F"
                        Foreground="White"
                        FontSize="20"
                        Click="btnCargarImagen_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#FF5A8F" CornerRadius="10">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

        </Grid>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,70,35">

            <Button x:Name="btnRegistrar"
                    Content="Registrar"
                    Foreground="White"
                    FontSize="22"
                    Cursor="Hand"
                    Click="btnRegistrar_Click"
                    Template="{StaticResource ButtonTemplate}"
                    Margin="0,0,20,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF5A8F"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D34B62"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="btnCancelar"
                    Content="Cancelar"
                    Foreground="White"
                    FontSize="22"
                    Cursor="Hand"
                    Click="btnCancelar_Click"
                    Template="{StaticResource ButtonTemplate}"
                    Background="#FBA1B7"/>
        </StackPanel>

    </Grid>

</Page>
