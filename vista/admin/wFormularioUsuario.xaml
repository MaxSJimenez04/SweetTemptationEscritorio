<Window x:Class="sweet_temptation_clienteEscritorio.vista.admin.wFormularioUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Usuario" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF7F7">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="LabelStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="#333333"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>
            
            <Style x:Key="InputStyle" TargetType="TextBox">
                <Setter Property="Height" Value="40"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#FF70B5"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
            
            <Style x:Key="PasswordStyle" TargetType="PasswordBox">
                <Setter Property="Height" Value="40"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="pack://application:,,,/resources/fonts/#poppins"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#FF70B5"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock x:Name="txtTitulo" 
                   Text="Crear Nueva Cuenta" 
                   FontFamily="pack://application:,,,/resources/fonts/#prata"
                   FontSize="28" Foreground="#FF70B5"
                   HorizontalAlignment="Center" Margin="0,0,0,25"/>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Usuario" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtUsuario" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Nombre" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtNombre" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Apellidos" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtApellidos" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Correo electrónico" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtCorreo" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Teléfono" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtTelefono" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Dirección" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtDireccion" Style="{StaticResource InputStyle}"/>

                <StackPanel x:Name="panelContrasena">
                    <TextBlock x:Name="lblContrasena" Text="Contraseña" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="txtContrasena" Style="{StaticResource PasswordStyle}"/>
                </StackPanel>

                <TextBlock Text="Rol" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbRol" Height="40" FontSize="14" Margin="0,0,0,15"
                          FontFamily="pack://application:,,,/resources/fonts/#poppins">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Padding" Value="10,8"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnGuardar" Content="Guardar"
                    Style="{StaticResource BtnRosaStyle}"
                    Width="150" Height="45" FontSize="16"
                    Click="BtnGuardar_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar"
                    Style="{StaticResource BtnBlancoStyle}"
                    Width="150" Height="45" FontSize="16"
                    Margin="15,0,0,0"
                    Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>

