<Page x:Class="sweet_temptation_clienteEscritorio.vista.admin.wGestionCuentas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="Gestión de Cuentas">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#FFF7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="40,30,40,20">
            <TextBlock Text="Gestión de Cuentas" 
                       Style="{StaticResource TxtTitulo}" 
                       HorizontalAlignment="Left"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="btnCrearCuenta" 
                        Content="+ Crear Nueva Cuenta"
                        Style="{StaticResource BtnRosaStyle}"
                        Width="220" Height="45" FontSize="16"
                        Click="BtnCrearCuenta_Click"/>
                
                <Button x:Name="btnActualizar" 
                        Content="Actualizar"
                        Style="{StaticResource BtnBlancoStyle}"
                        Width="140" Height="45" FontSize="16"
                        Margin="15,0,0,0"
                        Click="BtnActualizar_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <Border Grid.Row="1" Margin="40,10,40,40" 
                Background="White" 
                CornerRadius="15"
                BorderBrush="#FF70B5" BorderThickness="2"
                Effect="{StaticResource SombraSuave}">
            
            <DataGrid x:Name="dgUsuarios"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#FFE0E0E0"
                      Background="Transparent"
                      BorderThickness="0"
                      Margin="10"
                      FontFamily="pack://application:,,,/resources/fonts/#poppins"
                      FontSize="14">
                
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF70B5"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Height" Value="50"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFCE4F0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFFFD2F7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario}" Width="150"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                    <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="150"/>
                    <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="200"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="130"/>
                    <DataGridTextColumn Header="Rol" Binding="{Binding RolNombre}" Width="120"/>
                    
                    <DataGridTemplateColumn Header="Acciones" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Editar" 
                                            Background="#FF70B5" Foreground="White"
                                            BorderThickness="0" Padding="12,6"
                                            Cursor="Hand" FontSize="12"
                                            Click="BtnEditar_Click"
                                            Tag="{Binding}">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="Eliminar" 
                                            Background="#E74C3C" Foreground="White"
                                            BorderThickness="0" Padding="12,6"
                                            Cursor="Hand" FontSize="12"
                                            Margin="8,0,0,0"
                                            Click="BtnEliminar_Click"
                                            Tag="{Binding}">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Loading overlay -->
        <Border x:Name="loadingOverlay" Grid.RowSpan="2" 
                Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Cargando..." Foreground="White" FontSize="24" 
                           FontFamily="pack://application:,,,/resources/fonts/#poppins"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>







