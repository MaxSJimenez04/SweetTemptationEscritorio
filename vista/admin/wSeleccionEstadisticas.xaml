<Page x:Class="sweet_temptation_clienteEscritorio.vista.admin.wSeleccionEstadisticas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.admin"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      Title="Seleccionar Estadísticas">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#FFF7F7"
          Height="1080" Width="1920">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="BtnRegresar" 
                Grid.Column="0"
                Height="75" Width="75"
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="25,50,0,0"
                Style="{StaticResource iconButton}" 
                Click="BtnRegresarClick">
            <svgc:SvgViewbox Source="/resources/icons/icon_regresar.svg"/>
        </Button>

        <TextBlock Grid.Column="0"
                   Text="Seleccionar Estadisticas"
                   Style="{StaticResource TxtTitulo}"
                   Margin="125,50,0,0"/>

        <Button x:Name="BtnVentas"
                Grid.Column="0"
                Width="450"
                Height="450"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{StaticResource BtnTipoPago}" 
                Click="BtnVentasClick">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <svgc:SvgViewbox 
                    Grid.Row="0"
                    Height="250"
                    Width="250"
                    Stretch="Uniform"
                    Source="/resources/icons/icon_estadisticas.svg"/>
                
                <TextBlock Grid.Row="1"
                    Text="Ventas"
                    Style="{StaticResource TxtEtiqueta}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Margin="0,10,0,0"/>
            </Grid>
        </Button>

        <Button x:Name="BtnProductos"
             Grid.Column="1"
             Width="450"
             Height="450"
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             Style="{StaticResource BtnTipoPago}" Click="BtnProductosClick">   
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <svgc:SvgViewbox 
                     Grid.Row="0"
                     Height="250"
                     Width="250"
                     Stretch="Uniform"
                     Source="/resources/icons/icon_productos.svg"/>

                <TextBlock Grid.Row="1"
                     Text="Productos"
                     Style="{StaticResource TxtEtiqueta}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     FontWeight="Bold"
                     Margin="0,10,0,0"/>
            </Grid>
        </Button>
    </Grid>
</Page>
