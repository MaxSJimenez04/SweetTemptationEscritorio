<Window x:Class="sweet_temptation_clienteEscritorio.vista.wndMenuAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Title="wndMenuAdmin" Height="800" Width="1280">
    <Grid Background="#FFF7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="#FFFFD2F7" Grid.Row="0" Width="1280" Height="100" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="btnInicio" Width="45" Height="55" HorizontalAlignment="Left"
                        Margin="25,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}"
                        ToolTip="Inicio" Click="BtnInicio_Click">
                    <svgc:SvgViewbox Source="/resources/icons/icon_regresar.svg"/>
                </Button>
                <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" 
                        Margin="15,0,0,0" Padding="10,5" 
                        Background="#FFE91E63" Foreground="White" 
                        BorderBrush="{x:Null}" FontSize="12" Cursor="Hand"
                        Click="BtnClickCerrarSesion"/>
            </StackPanel>

            <StackPanel Grid.Column="1"  Orientation="Horizontal">
                <Image Source="/resources/images/logo_sweettemptation.png" Stretch="Uniform" Margin="10"/>
                <Label FontFamily="French Script MT" FontSize="40" Foreground="HotPink"
                    VerticalAlignment="Center" HorizontalAlignment="Left">Sweet Temptation</Label>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">

                <Button x:Name="btnGestionCuentas" Width="45" Height="55" HorizontalAlignment="Right"
                    Margin="150,20,0,20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}"
                    ToolTip="Gestión de Cuentas" Click="BtnGestionCuentas_Click">
                    <svgc:SvgViewbox Source="/resources/icons/icon_empleados.svg"/>
                </Button>

                <Button x:Name ="btnEstadísticas"  Width="45" Height="55" HorizontalAlignment="Right"
                    Margin="50,20,0,20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}"
                    ToolTip="Estadísticas">
                    <svgc:SvgViewbox Source="/resources/icons/icon_estadisticas.svg"/>
                </Button>

                <Button x:Name="btnPerfil" Width="45" Height="55" HorizontalAlignment="Right"
                    Margin="50,20,0,20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}"
                    ToolTip="Perfil">
                    <svgc:SvgViewbox Source="/resources/icons/ph_perfil.svg"/>
                </Button>
            </StackPanel>
        </Grid>
        <Frame Grid.Row="1" Name="fmPrincipal" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
