<Page x:Class="sweet_temptation_clienteEscritorio.vista.pedido.wPagoEfectivo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.pedido"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      Title="wPagoEfectivo">

    <Page.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Page.Resources>


        <Viewbox
    Stretch="Uniform">
            <Grid Background="#FFFFFF" Height="1080" Width="1920">
                <Grid.RowDefinitions>
                    <RowDefinition Height="87"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--TOP MENU-->
                <Border
                    Grid.Row="0"
                    BorderThickness="0,0,0,3" BorderBrush="#FF70B5">
                    <Grid
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Height="87"
                        Width="1920">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="522"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="180"/>
                        </Grid.ColumnDefinitions>
                        <Button          
                            Grid.Column="0"
                            x:Name="Home"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Height="56"
                            Width="221"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <Image 
                                Source="/resources/images/logo_sweettemptation2.png" 
                                Stretch="UniformToFill" 
                            />
                        </Button>

                        <Button 
                            Grid.Column="2"
                            Content="Menú" 
                            Style="{StaticResource BtnMenuStyle}"/>
                        <Button 
                            Grid.Column="3"
                            Content="Conócenos" 
                            Style="{StaticResource BtnMenuStyle}"/>
                        <Button 
                            Grid.Column="4"
                            Content="Cotizar" 
                            Style="{StaticResource BtnMenuStyle}"/>
                        <Button 
                            Grid.Column="5"
                            Content="Mi Cuenta" 
                            Style="{StaticResource BtnMenuCuentaStyle}"/>

                        <Button 
                            Grid.Column="6"
                            Style="{StaticResource BtnCarritoDeCompra}">
                            <svgc:SvgViewbox 
                                Source="/resources/icons/icon_carrito.svg"
                                Width="28"
                                Height="28"
                                Stretch="Uniform"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                />
                        </Button>

                    </Grid>
                </Border>

            </Grid>
        </Viewbox>
    </Page>
