<Page x:Class="sweet_temptation_clienteEscritorio.vista.pedido.wPagoEfectivo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.pedido"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      Title="wPagoEfectivo">

    <Page.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Page.Resources>


        <Viewbox
    Stretch="Uniform">
            <Grid Background="#FFFFFF" Height="1080" Width="1920">
                <Grid.RowDefinitions>
                    <RowDefinition Height="87"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--TOP MENU-->
                <Border
                    Grid.Row="0"
                    BorderThickness="0,0,0,3" BorderBrush="#FF70B5">
                    <Grid
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Height="87"
                        Width="1920">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="522"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="180"/>
                        </Grid.ColumnDefinitions>
                        <Button          
                            Grid.Column="0"
                            x:Name="Home"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Height="56"
                            Width="221"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <Image 
                                Source="/resources/images/logo_sweettemptation2.png" 
                                Stretch="UniformToFill" 
                            />
                        </Button>

                        <Button 
                            Grid.Column="2"
                            Content="Menú" 
                            Style="{StaticResource BtnMenuStyle}"/>
                        <Button 
                            Grid.Column="3"
                            Content="Conócenos" 
                            Style="{StaticResource BtnMenuStyle}"/>
                        <Button 
                            Grid.Column="4"
                            Content="Cotizar" 
                            Style="{StaticResource BtnMenuStyle}"/>
                        <Button 
                            Grid.Column="5"
                            Content="Mi Cuenta" 
                            Style="{StaticResource BtnMenuCuentaStyle}"/>

                        <Button 
                            Grid.Column="6"
                            Style="{StaticResource BtnCarritoDeCompra}">
                            <svgc:SvgViewbox 
                                Source="/resources/icons/icon_carrito.svg"
                                Width="28"
                                Height="28"
                                Stretch="Uniform"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                />
                        </Button>

                    </Grid>
                </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="800"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Style="{StaticResource BtnRegresar}"
                    Width="70"
                    Height="40"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="10,40,0,0">
                    <svgc:SvgViewbox 
                        Source="/resources/icons/icon_regresar.svg"
                        Width="28"
                        Height="28"
                        Stretch="Uniform"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                </Button>

                <StackPanel VerticalAlignment="Top" Width="1000" HorizontalAlignment="Left" Margin="90,0,0,0">
                    <TextBlock Text="Realizar Pago" Style="{StaticResource TxtTitulo}" Margin="0,30,0,20"/>

                    <TextBlock Text="Ingrese la cantidad" Style="{StaticResource TxtEtiqueta}" Margin="0,80,0,0" />
                    <TextBox x:Name="TxtNumero"
                         Style="{StaticResource TxtCampo}"                        
                         MaxLength="19"                 
                         Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,80,0,0">
                        <Button Content="Cancelar" 
                            FontSize="24"
                            Style="{StaticResource BtnBlancoStyle}" Margin="0,0,10,0"/>
                            <Button x:Name="BtnPagar" Content="Pagar" 
                            FontSize="24"
                            Style="{StaticResource BtnRosaStyle}" 
                            Click="BtnClickPagar"/>
                    </StackPanel>
                </StackPanel>

                <!-- DATOS -->             
                <TextBlock
                    x:Name="txtTotal"
                    Grid.Column="1"
                    Height="40"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,220,0,0"
                    Text="Total: $"
                    FontSize="30"
                    FontFamily="pack://application:,,,/resources/fonts/#poppins"/>

                <TextBlock
                    x:Name="txtCambio"
                    Grid.Column="1"
                    Height="40"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,320,0,0"
                    Text="Cambio: $"
                    FontSize="30"
                    FontFamily="pack://application:,,,/resources/fonts/#poppins"/>

            </Grid>

        </Grid>
        </Viewbox>
    </Page>
