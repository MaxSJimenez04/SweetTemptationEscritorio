<Page x:Class="sweet_temptation_clienteEscritorio.vista.pedido.wPedido"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.pedido"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="wPedido">
    <Grid Background="#FFF7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" FontSize="50" Margin="5"> Tu Pedido</Label>
        <Label x:Name="lbIdPedido" Grid.Row="0" FontSize="15" Margin="10"/>


        <StackPanel Name="spProductos" Grid.Row="1" Orientation="Horizontal"/>
        

        <Grid Grid.Row="2" >
            <StackPanel Orientation="Vertical" Margin="10,0,0,10">
                <Label x:Name="lbSubtotal" FontSize="25" Height="45">Subtotal: $</Label>
                <Label x:Name="lbImpuesto" FontSize="25" Height="45">IVA: </Label>
                <Label x:Name="lbTotal" FontSize="30" Height="50">Total: $</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" Content="Cancelar" Background="#FEDFE3"
                        Height="90" Width="250" Margin="15" FontSize="30" 
                        Click="btnClickCancelar"/>
                <Button x:Name="btnRealizarPedido" Content="Realizar Pedido" Background="#FBA1B7"
                        Height="90" Width="250" Margin="15" FontSize="30" 
                        Click="btnClickRealizar"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
