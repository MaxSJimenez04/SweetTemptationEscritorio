<Page x:Class="sweet_temptation_clienteEscritorio.vista.pedido.wTipoPago"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.pedido"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1280"
      Title="wTipoPago"
      Background="White">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>



    <Grid Background="#FFFFFF" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button 
                    Grid.Column="0"
                    Style="{StaticResource BtnRegresar}"
                    Width="70"
                    Height="40"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="10,40,0,0"
                    Click="btnClickRegresar">
                <svgc:SvgViewbox 
                        Source="/resources/icons/icon_regresar.svg"
                        Width="28"
                        Height="28"
                        Stretch="Uniform"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
            </Button>

            <Button 
                    Grid.Column="0"
                    Style="{StaticResource BtnTipoPago}"
                    Width="410"
                    Height="410"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="10,40,0,0"
                    Click="btnClickEfectivo">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <svgc:SvgViewbox 
                            Grid.Row="0"
                            Source="/resources/icons/icon_efectivo.svg"
                            Width="250" 
                            Height="250" 
                            Stretch="Uniform"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,0"/>

                    <TextBlock 
                            Grid.Row="1"
                            Text="Efectivo" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0" FontSize="35" FontWeight="Bold"
                            Foreground="Black"
                            FontFamily="pack://application:,,,/resources/fonts/#poppins"/>
                </Grid>
            </Button>

            <Button 
                    Grid.Column="1"
                    Style="{StaticResource BtnTipoPago}"
                    Width="410"
                    Height="410"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="10,40,0,0"
                    Click="btnClickTarjeta">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <svgc:SvgViewbox 
                            Grid.Row="0"
                            Source="/resources/icons/icon_tarjeta.svg"
                            Width="250" 
                            Height="250" 
                            Stretch="Uniform"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,0"/>

                    <TextBlock 
                            Grid.Row="1"
                            Text="Tarjeta" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0" FontSize="35" FontWeight="Bold"
                            Foreground="Black"
                            FontFamily="pack://application:,,,/resources/fonts/#poppins"/>
                </Grid>
            </Button>



            
        </Grid>
        <StackPanel VerticalAlignment="Top" Width="1000" HorizontalAlignment="Left" Margin="90,0,0,0">
            <TextBlock Text="Seleccionar Método de Pago" Style="{StaticResource TxtTitulo}" Margin="0,30,0,20"/>
        </StackPanel>
    </Grid>
</Page>
