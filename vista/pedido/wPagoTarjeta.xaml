<Page x:Class="sweet_temptation_clienteEscritorio.vista.pedido.wPagoTarjeta"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sweet_temptation_clienteEscritorio.vista.pedido"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      Title="wPagoTarjeta"
      Background="White">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/styleSheets/styleSheetClient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Viewbox
        Stretch="Uniform">
        <Grid Background="#FFFFFF" Height="1080" Width="1920">
            <Grid.RowDefinitions>
                <RowDefinition Height="87"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--TOP MENU-->
            <Border
                Grid.Row="0"
                BorderThickness="0,0,0,3" BorderBrush="#FF70B5">
                <Grid
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Height="87"
                    Width="1920">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="522"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>
                    <Button          
                        Grid.Column="0"
                        x:Name="Home"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Height="56"
                        Width="221"
                        Background="Transparent"
                        BorderBrush="Transparent">
                        <Image 
                            Source="/resources/images/logo_sweettemptation2.png" 
                            Stretch="UniformToFill" 
                        />
                    </Button>

                    <Button 
                        Grid.Column="2"
                        Content="Menú" 
                        Style="{StaticResource BtnMenuStyle}"/>
                    <Button 
                        Grid.Column="3"
                        Content="Conócenos" 
                        Style="{StaticResource BtnMenuStyle}"/>
                    <Button 
                        Grid.Column="4"
                        Content="Cotizar" 
                        Style="{StaticResource BtnMenuStyle}"/>
                    <Button 
                        Grid.Column="5"
                        Content="Mi Cuenta" 
                        Style="{StaticResource BtnMenuCuentaStyle}"/>

                    <Button 
                        Grid.Column="6"
                        Style="{StaticResource BtnCarritoDeCompra}">
                        <svgc:SvgViewbox 
                            Source="/resources/icons/icon_carrito.svg"
                            Width="28"
                            Height="28"
                            Stretch="Uniform"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            />
                    </Button>

                </Grid>
            </Border>
            <!-- Parte de abajo -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="800"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Style="{StaticResource BtnRegresar}"
                    Width="70"
                    Height="40"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="10,40,0,0">
                    <svgc:SvgViewbox 
                        Source="/resources/icons/icon_regresar.svg"
                        Width="28"
                        Height="28"
                        Stretch="Uniform"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                </Button>

                <StackPanel VerticalAlignment="Top" Width="1000" HorizontalAlignment="Left" Margin="90,0,0,0">
                    <TextBlock Text="Realizar Pago" Style="{StaticResource TxtTitulo}" Margin="0,30,0,20"/>

                    <TextBlock Text="Número de tarjeta" Style="{StaticResource TxtEtiqueta}" Margin="0,80,0,0" />
                    <TextBox x:Name="TxtNumero"
                             Style="{StaticResource TxtCampo}"
                             PreviewTextInput="TxtNumero_PreviewTextInput"
                             TextChanged="TxtNumero_TextChanged"
                             MaxLength="19"                 
                             Margin="0,0,0,10"/>

                        <TextBlock Text="Titular" Style="{StaticResource TxtEtiqueta}" Margin="0,10,0,0" />
                        <TextBox x:Name="TxtTitular"
                             Style="{StaticResource TxtCampo}"
                             Text="{Binding Titular, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             PreviewTextInput="TxtTitular_PreviewTextInput"
                             PreviewKeyDown="TxtTitular_PreviewKeyDown"
                             DataObject.Pasting="TxtTitular_Pasting"
                             Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Width="195" Margin="0,0,70,0">
                                <TextBlock Text="Vencimiento" Style="{StaticResource TxtEtiqueta}"/>
                                <TextBox x:Name="TxtVencimiento"
                                     Style="{StaticResource TxtCampo}"
                                     Text="{Binding Vencimiento, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     PreviewTextInput="TxtVencimiento_PreviewTextInput"
                                     TextChanged="TxtVencimiento_TextChanged"
                                     PreviewKeyDown="TxtVencimiento_PreviewKeyDown"
                                     MaxLength="5"/>
                            </StackPanel>

                            <StackPanel Width="100">
                                <TextBlock Text="CVC" Style="{StaticResource TxtEtiqueta}"/>
                                <TextBox x:Name="TxtCVC"
                                     Style="{StaticResource TxtCampo}"
                                     Text="{Binding CVC, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     PreviewTextInput="TxtCVC_PreviewTextInput"
                                     MaxLength="3"/>
                            </StackPanel>
                        </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,80,0,0">
                        <Button Content="Cancelar" 
                                    FontSize="24"
                                    Style="{StaticResource BtnBlancoStyle}" Margin="0,0,10,0"/>
                            <Button x:Name="BtnPagar" Content="Pagar" 
                                FontSize="24"
                                Style="{StaticResource BtnRosaStyle}" 
                                Click="BtnClickPagar"/>
                        </StackPanel>
                </StackPanel>

                <!-- TARJETA VISUAL -->
                <Border Grid.Column="1"
                        Width="673" Height="405"
                        CornerRadius="15"
                        Margin="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Effect="{StaticResource SombraSuave}">
                    
                    <Border.Background>
                        <ImageBrush ImageSource="pack://application:,,,/resources/images/tarjetaBancaria.png" Stretch="UniformToFill"/>
                    </Border.Background>
                    <Grid Margin="40,20,40,20">
                        <TextBlock Text="{Binding Text, ElementName=TxtNumero}"
                                   FontSize="28" FontWeight="SemiBold"
                                   Foreground="White" VerticalAlignment="Center" TextWrapping="Wrap"
                                   FontFamily="pack://application:,,,/resources/fonts/#inter"/>
                        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,20">
                            <TextBlock Text="{Binding Titular}" FontSize="18" Foreground="White"
                                       FontFamily="pack://application:,,,/resources/fonts/#inter"/>
                            <TextBlock Text="{Binding Vencimiento}" FontSize="16" Foreground="White"
                                       FontFamily="pack://application:,,,/resources/fonts/#inter"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock
                    Grid.Column="1"
                    Width="300"
                    Height="40"
                    VerticalAlignment="Top"
                    Margin="0,220,0,0"
                    Text="Total: $"
                    FontSize="30"
                    FontFamily="pack://application:,,,/resources/fonts/#poppins"/>

            </Grid>
        </Grid>
    </Viewbox>
</Page>